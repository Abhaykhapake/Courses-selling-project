<%-include("navbar.ejs") %>
<br><br>
<div class="container">
    <div class="row  ">
        <div class="col-md-12">
           <br>
        </div>
        <div class="col-md-6">
            <img src="/uploads/<%=course_det[0].course_image%>" width="100%">
         </div>
         <div class="col-md-6">
           <h3 style="font-weight: bold;"><%=course_det[0]['course_name']%></h3><hr>
           <h5 > In just <%=course_det[0]['course_duration']%></h5><hr>
           <h2 style="font-weight: bold;">  <%=course_det[0]['course_price']%>/-</h2><hr>
           <h4> By :- <%=course_det[0]['course_mentor']%></h4><hr>
           <h5><%=course_det[0]['course_platform']%></h5><hr>
           <br>

           <a href="/confirm_seat/<%= course_det[0]['course_id'] %>">
            <button class="btn btn-dark btn-lg">Confirm Your Seat</button>
          </a>


          <% if(course_det[0].course_sample_video!="") { %>
           <button style="background-color: rgb(44, 44, 188);
           color: white; 
           font-size:30px; width: 70px; height: 70px;
            border-radius: 50%;
            position: absolute;
            right:20px;
            top: 40px;" data-toggle="modal" data-target="#videoModal">
            <i class="fa fa-play"></i></button>
            <% } %>
         </div>
         <h4 style="font-weight: bold;">Course Details :-</h4>
         <div class="col-md-12 mt-3">
            <h6 ><%=course_det[0].course_details.replaceAll('\n',"<br>")%></h6>
          </div>
    </div>

</div>
<br><br>
<br><br>
<br><br>
<br><br>

<!-- it is a video tag and its optional -->
<!-- Button to Open the Modal -->

  <!-- The Modal -->
  <div class="modal" id="videoModal">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Demo Video</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
         <video width="100%" controls>
            <source src="/uploads/<%=course_det[0].course_sample_video%>">
         </video>
        </div>
  
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
  
      </div>
    </div>
  </div>

<%-include("footer.ejs") %>